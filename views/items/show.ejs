<% layout('/layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/stars.css" />

<div class="d-flex flex-row flex-wrap justify-content-md-around mt-5">
  <!-- <div class="col-4"> -->
  <div class="card mb-3 bg-transparent " style="width: 18rem">
    <div id="itemCarousel" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <% item.image.forEach((img,i)=>{ %>
        <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
          <img class="d-block w-100" src="<%= img.url %>" alt="" />
        </div>
        <% }) %>
      </div>
      <% if(item.image.length>1){ %>
      <a
        class="carousel-control-prev"
        href="#itemCarousel"
        role="button"
        data-slide="prev"
      >
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a
        class="carousel-control-next"
        href="#itemCarousel"
        role="button"
        data-slide="next"
      >
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
      <% } %>
    </div>

    <div class="card-body">
      <h5 class="card-title"><%= item.title %></h5>
      <p class="card-text"><%= item.description %></p>
    </div>
    <ul class="list-group list-group-flush">
      <!-- <li class="list-group-item text-muted"><%= item.location %></li> -->
      <li class="list-group-item bg-transparent">
        Submitted by : <%= item.author.username %>
      </li>
      <li class="list-group-item bg-transparent">Price : â‚¹<%= item.price %></li>
    </ul>
    <% if(currentUser){ %>
    <div class="card-footer">
      <% if(currentUser && item.author.equals(currentUser)){ %>
      <a class="card-link btn btn-warning" href="/items/<%=item._id%>/edit"
        >Edit</a
      >
      <form
        class="d-inline"
        method="POST"
        action="/items/<%=item._id%>?_method=DELETE"
      >
        <button class="btn btn-info">Delete</button>
      </form>
      <% } %>
      <% if(currentUser){ %>
      <% if(currentUser.username!=='admin') {%>
        <a class="card-link btn btn-primary" href="#"
        >Pay</a
      >
      <% } %>
    <% } %>
    </div>
<% } %>
    
  </div>
  <div class="mb-3" style="width: 18rem">
    <% if(currentUser){ %>
    <h3>Leave a Review</h3>
    <form
      action="/items/<%=item._id%>/reviews"
      method="POST"
      class="mb-3 validated-form"
      novalidate
    >
      <!-- <div class="mb-3">
                        <label class="form-label" for="rating">Rating</label>
                        <input class="form-range" type="range" min="0" max="5" name="review[rating]" id="rating">
                    </div> -->
      <div class="mb-3">
        <fieldset class="starability-basic">
          <!-- <legend>First rating:</legend> -->
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="review[rating]"
            value="0"
            checked
            aria-label="No rating."
          />
          <input
            type="radio"
            id="first-rate1"
            name="review[rating]"
            value="1"
          />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input
            type="radio"
            id="first-rate2"
            name="review[rating]"
            value="2"
          />
          <label for="first-rate2" titlek="Not good">2 stars</label>
          <input
            type="radio"
            id="first-rate3"
            name="review[rating]"
            value="3"
          />
          <label for="first-rate3" title="Average">3 stars</label>
          <input
            type="radio"
            id="first-rate4"
            name="review[rating]"
            value="4"
          />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input
            type="radio"
            id="first-rate5"
            name="review[rating]"
            value="5"
          />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>
      <div class="mb-3">
        <label class="form-label" for="body">Review</label>
        <textarea
          class="form-control"
          name="review[body]"
          id="body"
          cols="30"
          rows="3"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <button class="btn btn-success">Submit</button>
    </form>
    <% } %> <% for(let review of item.reviews) {%>
    <div class="card mb-3 bg-transparent border-0">
      <h5 class="card-title"><%=review.author.username %></h5>

      <p class="starability-result" data-rating="<%= review.rating %>">
        Rated: <%= review.rating %> stars
      </p>
      <!-- <h6 class="card-subtitle mb-2 text-muted">By-
                                <%=review.author.username %>
                            </h6> -->
      <p class="card-text">Review: <%= review.body %></p>
      <% if(currentUser && review.author.equals(currentUser)) { %>
      <form
        action="/items/<%=item._id %>/reviews/<%=review._id %>?_method=DELETE"
        method="POST"
      >
        <button class="btn btn-danger btn-sm">Delete</button>
      </form>
      <% } %>
    </div>
    <% } %>
  </div>
  <!-- </div> -->
</div>
